<h1 class="date">{{formattedDate}}</h1>

<section class="planning">
    <div class="planning-period-morning"><span class="tasks-period">Matin</span></div>
    <div class="planning-period-noon"><span class="tasks-period">Midi</span></div>
    <div class="planning-period-evening"><span class="tasks-period">Soir</span></div>

    {{#each members}}
        <div class="planning-member">
            <img class="task-member" src="data:image/jpeg;charset=utf-8;base64,{{avatar}}" alt="{{name}}"/>
        </div>

        <div class="planning-tasks">
        {{#each morningTasks}}
            <button class="planning-task {{#if active}}planning-task-active{{/if}}" data-taskId="{{id}}" data-memberId="{{../id}}" data-active="{{active}}">
                {{name}}
            </button>
        {{/each}}
        </div>

        <div class="planning-tasks">
        {{#each noonTasks}}
            <button class="planning-task {{#if active}}planning-task-active{{/if}}" data-taskId="{{id}}" data-memberId="{{../id}}" data-active="{{active}}">
                {{name}}
            </button>
        {{/each}}
        </div>

        <div class="planning-tasks">
        {{#each eveningTasks}}
            <button class="planning-task {{#if active}}admin-task-active{{/if}}" data-taskId="{{id}}" data-memberId="{{../id}}" data-active="{{active}}">
                {{name}}
            </button>
        {{/each}}
        </div>
    {{/each}}
</section>
<script src="js/index.js" type="module"></script>
